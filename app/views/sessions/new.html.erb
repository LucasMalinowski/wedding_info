<h1>Login</h1>

<%= form_with(model: @user, url: login_path, local: true) do |form| %>
  <% if flash[:danger] %>
    <div class="danger">
      <%= flash[:danger] %>
    </div>
  <% end %>

  <div class="card">
    <%= form.label :email %>
    <%= form.email_field :email %>

    <%= form.label :password %>
    <%= form.password_field :password %>

    <%= form.submit 'Login' %>
  </div>
<% end %>

<p>Don't have an account? <%= link_to 'Sign up', new_user_path %></p>
