<h1>Edit User</h1>

<%= form_with model: @user, url: user_path(@user), method: :put do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>
  <div>
    <%= form.label :password_digest %>
    <%= form.password_field :password_digest %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>